<?xml version="1.0"?>
<vbox xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
  <setting type="bool"
           pref="extensions.verticaltabs.right"
           title="Display tabs on the right"/>
  <setting type="menulist"
           pref="extensions.verticaltabs.theme"
          title="Theme">
    <menulist>
      <menupopup>
      <menuitem value="default" label="Default" />
      <menuitem value="dark" label="Dark" />
      <menuitem value="light" label="Light" />
      <menuitem value="WINNT" label="Win7" />
      <menuitem value="Darwin" label="Mac OS X" />
      <menuitem value="Linux" label="Linux" />
      </menupopup>
    </menulist>
  </setting>
  <setting type="bool"
           pref="extensions.verticaltabs.fullscreen"
           title="Hide tabs in fullscreen mode"/>
</vbox>